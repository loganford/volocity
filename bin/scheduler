#!/usr/bin/env node

var nodemailer = require('nodemailer');

var transporter = nodemailer.createTransport({
    service: 'Gmail',
    auth: {
        user: 'volocity.scheduler@gmail.com', // Your email id
        pass: '3hZa7LNRufdZ9Qy' // Your password
    }
});

var mailOptions = {
    from: 'loganford17@gmail.com', // sender address
    to: 'loganford17@gmail.com', // list of receivers
    subject: 'Howdy', // Subject line
    text: 'Howdy Ags' //, // plaintext body
    // html: '<b>Hello world âœ”</b>' // You can choose to send an HTML body instead
};

transporter.sendMail(mailOptions, function(error, info){
    if(error){
        console.log(error);
    }else{
        console.log('Message sent: ' + info.response);
    };
});